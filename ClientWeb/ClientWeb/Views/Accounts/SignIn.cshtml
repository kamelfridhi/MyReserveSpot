@model ClientWeb.Models.MemberShip.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

<h1>Create Account</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SignIn" method="post">
            <!-- Use 'post' method to submit the form data -->
            @* Add an anti-forgery token *@
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
              
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Get Started" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
