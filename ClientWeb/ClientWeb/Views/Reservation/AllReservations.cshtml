@model List<ClientWeb.Models.Reservation.ReservationModel>

@{
    ViewData["Title"] = "All Reservations";
}
@if (Model != null && Model.Count > 0)
{
<h1>All Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>First Reservation Date</th>
            <th>Last Reservation Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Title</td>
                <td>@reservation.Description</td>
                <td>@reservation.FirstReservationDate</td>
                <td>@reservation.LastReservationDate</td>
            </tr>
        }
    </tbody>
</table>
}